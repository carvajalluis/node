extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet" href="/css/auth.css")
    link(rel="stylesheet" href="/css/forms.css")
block content
    main
        if(errorMessage)
            div(class=errorMessage.length ? "user-message user-message--error": "") #{errorMessage}
        form.login-form(action="/auth/new-password" method="POST")
            .form-control
                label(for="new_password") Password
                input(type="password" name="new_password")#new_password
            .form-control
                label(for="new_password_confirmation") Confirm Password
                input( type="password" name="new_password_confirmation" )#new_password_confirmation
                input(type="hidden" name="_csrf" value=csrfToken) 
                input(type="hidden" name="token" value=token) 
            button.btn(type="submit") Update Password