extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet" href="/css/product.css")
    
block content
    main.centered
        h1 #{product.title}
        hr
        img.image(src=product.imageUrl, alt=product.title)
        h2 #{product.price}
        p #{product.description}
        a.btn(href=`/shop/products`) back
        include ../layouts/includes/add-to-cart.pug