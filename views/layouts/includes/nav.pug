div.backdrop
header.main-header
    button#side-menu-toggle Menu 
    nav.main-header__nav
        ul.main-header__item-list
            li.main-header__item
                a(href="/shop/", class=(path === "/" ? "active": "")) Shop
            li.main-header__item
                a(href="/shop/products", class=(path === "/shop/products" ? "active": "")) Products
            if(isAuthenticated)
                li.main-header__item
                    a(href="/shop/cart", class=(path === "/shop/cart" ? "active": "")) Cart
                li.main-header__item
                    a(href="/shop/orders", class=(path === "/shop/orders" ? "active": "")) Orders
                li.main-header__item
                    a(href="/admin/add-product", class=(path === "/admin/add-product" ? "active": "")) Add Product
                li.main-header__item
                    a(href="/admin/products", class=(path === "/admin/products" ? "active": "")) Admin Products
        ul.main-header__item-list
            if(!isAuthenticated)
                li.main-header__item
                    a(class=(path === "/login" ? "active": "") href="/auth/login") Login
                li.main-header__item
                    a(class=(path === "/signup" ? "active" : "" ) href="/auth/signup") Signup
            else
                li.main-header__item
                    form(action="/auth/logout" method="post")
                        input(type="hidden" name="_csrf" value=csrfToken)
                        button(type="submit") Logout   
nav.mobile-nav
    ul.mobile-nav__item-list
        li.mobile-nav__item
            a(href="/shop/", class=(path === "/" ? "active": "")) Shop
        li.mobile-nav__item
            a(href="/shop/products", class=(path === "/shop/products" ? "active": "")) Products
        if(isAuthenticated)
            li.mobile-nav__item
                a(href="/shop/cart", class=(path === "/shop/cart" ? "active": "")) Cart
            li.mobile-nav__item
                a(href="/shop/orders", class=(path === "/shop/orders" ? "active": "")) Orders
            li.mobile-nav__item
                a(href="/admin/add-product", class=(path === "/admin/add-product" ? "active": "")) Add Product
            li.mobile-nav__item
                a(href="/admin/products", class=(path === "/admin/products" ? "active": "")) Admin Products
    ul.mobile-nav__item-list
        if(!isAuthenticated)
            li.mobile-nav__item
                a(href="/auth/login") Login
            li.mobile-nav__item
                a(class=(path === "signup" ? "active" : "" ) href="/auth/signup") Signup
        else
            li.mobile-nav__item
                form(action="/auth/logout" method="post")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    button(type="submit") Logout   
